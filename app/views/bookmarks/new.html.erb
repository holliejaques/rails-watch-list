<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-danger bg-gradient rounded p-4 shadow">
        <h1>Add a movie to your <%= @list.name %> list</h1>
        <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.association :movie, prompt: "Select a movie"%>
          <%= f.input :comment, placeholder: "Enter a comment about the movie" %>
            <div class="d-grid gap-2 col-6 mx-auto">
            <%= f.submit class: "btn btn-success btn-sm" %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
